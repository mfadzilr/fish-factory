.col-lg-12
  - flash.each do |key, value|
    - case key
    - when 'notice'
      - @key = 'info'
      - @sign = 'icon-info-sign'
    - when 'error'
      - @key = 'danger'
      - @sign = 'icon-warning-sign'
    - else
      - @key = key
      - @sign = 'icon-ok-sign'
    %div{class: "alert alert-#{@key} alert-block fade in"}
      %button.close.close-sm{"data-dismiss" => "alert", type: "button"}
        %i.icon-remove
      %h4
        %i{class: @sign}
        = key.sub(/^(\w)/) {|s| s.capitalize}
      %p= value
