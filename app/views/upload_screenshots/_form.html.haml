= form_for @upload_screenshot do |f|
  - if @upload_screenshot.errors.any?
    #error_explanation
      %h2= "#{pluralize(@upload_screenshot.errors.count, "error")} prohibited this upload_screenshot from being saved:"
      %ul
        - @upload_screenshot.errors.full_messages.each do |msg|
          %li= msg

  .field
    -# = f.label :image
    = f.file_field :image
  .actions
    = f.submit 'Save'
