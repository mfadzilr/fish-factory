       
          <form class="form-horizontal tasi-form" method="get">
            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label lightgrey">PROFILE NAME</label>
                <div class="col-lg-6">
                    <p class="form-control-static"><%= @send_profile.title %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label lightgrey">MAIL SERVER</label>
                <div class="col-lg-6">
                    <p class="form-control-static"><%= "#{@send_profile.address}" %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label lightgrey">PORT</label>
                <div class="col-lg-6">
                    <p class="form-control-static"><%= "#{@send_profile.port}" %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label lightgrey">USERNAME</label>
                <div class="col-lg-6">
                    <p class="form-control-static"><%= @send_profile.user_name %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label lightgrey">PASSWORD</label>
                <div class="col-lg-6">
                    <p class="form-control-static"><%= @send_profile.password %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label lightgrey">AUTHENTICATION</label>
                <div class="col-lg-6">
                    <p class="form-control-static"><%= @send_profile.authentication.upcase %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label lightgrey">AUTO START TLS</label>
                <div class="col-lg-6">
                    <input type="checkbox" <%= @send_profile.enable_starttls_auto ? 'checked' : '' %> disabled data-toggle="switch" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label lightgrey">OPENSSL VERIFY MODE</label>
                <div class="col-lg-6">
                    <p class="form-control-static"><%= @send_profile.openssl_verify_mode.upcase %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label lightgrey">PUBLIC</label>
                <div class="col-lg-6">
                    <p class="form-control-static"> <input type="checkbox" <%= @send_profile.public ? 'checked' : '' %> disabled data-toggle="switch" /></p>
                </div>
            </div>
          </form>
        
