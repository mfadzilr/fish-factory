    
    <%= form_for @report, multipart: true, :html => {:class =>'form-horizontal tasi-form async'} do |f| %>
          <div class="alert alert-warning alert-block fade in hidden">
            <h4>
                <i class="icon-ko-sign"></i>
                Error
            </h4>
            <ul id="message"></ul>
          </div>
          <div class="alert alert-info alert-block fade in hidden">
            <h4>
                <i class="icon-ok-sign"></i>
                Success
            </h4>
            <p id="message-info"></p>
          </div>
          <div class="form-group" style="border-bottom: none">
            <label class="col-lg-4 col-sm-4 control-label lightgrey">TITLE</label>
            <div class="col-lg-8">
                <%= f.text_field :title, class: "form-control" %>
            </div>
          </div>
          <div class="form-group" style="border-bottom: none">
            
              <table class="table table-hover">
                <thead>
                  <td width="3%"><input id="toggle_campaign" type="checkbox"></td>
                  <td class="lightgrey">CAMPAIGN</td>
                  <td></td>
                </thead>
                <tbody>
                  <% if current_user.campaigns.count == 0 %>
                  <td colspan="3"> You don't have any campaign </td>
                  <% else %>
                    <% current_user.campaigns.each do |campaign| %>
                    <tr>
                    <td><%= f.check_box :campaign_ids, { multiple: true }, campaign.id, false %></td>
                    <td><%= campaign.title %></td>
                    <td><%= campaign.created_at.strftime("%e %b %Y %I:%M %p") %></td>
                  </tr>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
            
           

          </div>
        </div>
        <div class="modal-footer">
          <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
          <button class="btn btn-success" type="submit"><i class="icon-refresh icon-spin hidden" style="margin-right: 10px"></i> Save changes </button>

    <% end %>
