= form_for @email_template do |f|
  = render 'shared/errors', obj: @email_template

  .form-group
    = f.label :title
    = f.text_field :title, class: "form-control"

  .form-group
    = f.label :description
    = f.text_field :description, class: "form-control"

  .form-group
    = f.label :content
    = f.text_area :content, class: "form-control ckeditor", rows: 20

  - if current_user.admin?
    .form-group
      = f.label :is_private
      = f.check_box :is_private

  .form-group
    = f.submit 'Save', class: "btn btn-primary"
    = link_to 'Back', email_templates_path, class: "btn btn-primary"
