    
    <%= form_for @site_page, multipart: true, :html => {:class =>'form-horizontal tasi-form async'} do |f| %>
            <div class="alert alert-warning alert-block fade in hidden">
              <h4>
                  <i class="icon-ko-sign"></i>
                  Error
              </h4>
              <ul id="message"></ul>
          </div>
          <div class="alert alert-info alert-block fade in hidden">
              <h4>
                  <i class="icon-ok-sign"></i>
                  Success
              </h4>
              <p id="message-info"></p>
          </div>
            <div class="form-group">
                <label class="col-lg-2 col-sm-2 control-label lightgrey">TITLE</label>
                <div class="col-lg-10">
                    <%= f.text_field :title, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-sm-2 control-label lightgrey">DESCRIPTION</label>
                <div class="col-lg-10">
                    <%= f.text_field :description, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-sm-2 control-label lightgrey">PRIVATE</label>
                <div class="col-lg-10">
                    <%= f.check_box :is_private, :data => { :toggle => 'switch' } %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-sm-2 control-label lightgrey">TARGET URL</label>
                <div class="col-lg-8">
                    <%= f.text_field :target_url, class: "form-control", placeholder: 'e.g. http://www.google.com' %>
                    
                </div>
                <div class="col-lg-2">
                  <button class="btn btn-primary" type="submit" name="commit" value="Copy Site"><i class="icon-refresh icon-spin hidden" style="margin-right: 10px"></i> Copy Site </button> 
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-sm-2 control-label lightgrey">CONTENT</label>
                <div class="col-lg-10">
                    <%= f.text_area :content, class: "form-control ckeditor", rows: 20 %>
                </div>
            </div>
        <div class="modal-footer">
                   
          <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
          <button class="btn btn-success" type="submit"><i class="icon-refresh icon-spin hidden" style="margin-right: 10px"></i> Save changes </button>
     <% end %>
